@using SalesOrder.Models

@model ProductEntity
@{
    ViewData["Title"] = "Add Products";
}

<form asp-action="CreateProduct" asp-controller="Product" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label for="">Product Code</label>
                <input asp-for="ProductCode" type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="">Product Name</label>
                <input asp-for="ProductName" type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Create Produck</button>
                    <a asp-action="Index" asp-controller="Product" class="btn- btn-secondary"></a>
                </center>
            </div>
        </div>
    </div>

</form>